= form_for [:admin, product, item], remote: true, authenticity_token: true do |f|
  .form-groups
    .row
      .col-xs-6
        = f.form_group :feature_id do
          = f.label :feature_id, class: 'control-label'
          = f.collection_select :feature_id, features,
            :id, :name, { prompt: 'Выберите атрибут' },
                        { class: 'form-control selectize-features' }
          = f.error_message :feature_id
      .col-xs-6
        = f.form_group :feature_value_id do
          = f.label :feature_value_id, class: 'control-label'
          = f.collection_select :feature_value_id, feature_values,
            :id, :name, { prompt: 'Выберите значение атрибута' },
                        { class: 'form-control selectize-feature-values' }
          = f.error_message :feature_value_id
    .well
      .row
        .col-xs-6
          .form-group
            = f.label :price, class: 'control-label'
            = f.text_field :price, class: 'form-control mask-currency'
        .col-xs-6
          .form-group
            = f.label :weight, class: 'control-label'
            = f.text_field :weight, class: 'form-control mask-weight'
    .form-group
      = f.button nil, class: 'btn btn-primary ladda-button'
