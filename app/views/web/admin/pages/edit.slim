- title @page.meta_title
- content_for :header do
  ol.breadcrumb
    li = link_to 'Страницы', admin_pages_path
    li.active = @page.meta_title
section.submenu id='pages'
  = render 'pages'
section.padded
  .container-fluid
    .panel.panel-default
      .panel-heading
        = link_to '&times;'.html_safe, admin_pages_path, class: 'close'
        .panel-title = @page.meta_title
      .panel-body
        = render 'form', item: @page
