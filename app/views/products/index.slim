  .container
    .section-title Напитки
    .row
      .col-xs-6.col-md-4.col-lg-3
        .panel.panel-default.panel-product
          .panel-body style='background-image: url("http://genmutant.com/attachments/1353644361_soki-jpg.380/"); background-size: 350px;'
            .product-title Сок в ассортименте
          .panel-footer
            .product-select
