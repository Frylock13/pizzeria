= form_for [:admin, item], remote: true, authenticity_token: true, html: { class: 'form-horizontal' } do |f|
  = form_field_group :name, item do
    = f.label :name, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :name, class: 'form-control', required: false
      = form_field_error :name, item
  .form-group
    = f.label :visibility, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.select :visibility, Pizza.visibilities_i18n.map { |k, v| [v, k] },
                 { prompt: 'Укажите, где пицца будет видима' },
                 { class: 'form-control selectize-visibility' }
  .form-group
    = f.label :images, class: 'col-sm-2 control-label'
    .col-sm-10
      .fileinput.fileinput-new data-provides='fileinput'
        .fileinput-body
          = f.label :image, class: 'control-label'
          .fileinput-new.thumbnail
            - if item.image?
              = image_tag item.image.url(:thumb)
            - else
              .img-dummy.dummy-vertical
                .dummy-icon
              p Фото нет
          .fileinput-preview.fileinput-exists.thumbnail
          div
            span.btn.btn-default.btn-file
              span.fileinput-new Выбрать фото
              span.fileinput-exists Поменять
              = f.file_field :image, accept: 'image/png,image/gif,image/jpeg'
            a.btn.btn-default.fileinput-exists data-dismiss='fileinput' href='#' Убрать
        .help-block Рекомендованный размер 700x400, формат: JPEG, GIF, PNG
  div { class = 'form-group ng-hide'
        ng-controller = 'PizzaIngredientsFormController as vm'
        ng-show = 'vm.ingredient_categories'
      }
    = f.label :pizza_ingredient_attributes, class: 'col-sm-2 control-label'
    .col-sm-10
      .product-ingredients
        ul.list-group
          div ng-repeat='ingredient_category in vm.ingredient_categories'
            li.list-group-item
              .list-group-item-heading ng-bind='ingredient_category.name'
              li { class = 'list-group-item'
                   ng-repeat = 'ingredient in ingredient_category.ingredients'
                 }
                .product-controls
                  span { ng-if = 'vm.pizzaIngredient(ingredient.id)' }
                    span { ng-if = 'vm.ingredientQuantity(ingredient.id) > 0' }
                      input { type = 'checkbox'
                              ng-model = 'vm.pizzaIngredient(ingredient.id).core'
                              id = 'pizza_ingredient_{{ingredient.id}}_core'
                            }
                      label for='pizza_ingredient_{{ingredient.id}}_core' Базовый ингредиент?
                  a.product-counter ng-click='vm.decreaseIngredient(ingredient.id)'
                    span.fa.fa-minus
                  span.product-amount ng-bind='vm.ingredientQuantity(ingredient.id)'
                  a.product-counter ng-click='vm.increaseIngredient(ingredient.id)'
                    span.fa.fa-plus
                .ingredient-title ng-bind='ingredient.name'
                span { ng-if = 'vm.pizzaIngredient(ingredient.id)' }
                  span { ng-if = 'vm.pizzaIngredient(ingredient.id).id' }
                    input { type = 'hidden'
                            name = 'pizza[pizza_ingredients_attributes][{{$index}}][id]'
                            value = '{{vm.pizzaIngredient(ingredient.id).id}}'
                          }
                    input { type = 'hidden'
                            ng-if = 'vm.ingredientQuantity(ingredient.id) == 0'
                            name = 'pizza[pizza_ingredients_attributes][{{$index}}][_destroy]'
                            value = 'true'
                          }
                    input { type = 'hidden'
                            ng-if = 'vm.ingredientQuantity(ingredient.id) > 0'
                            name = 'pizza[pizza_ingredients_attributes][{{$index}}][quantity]'
                            value = '{{vm.ingredientQuantity(ingredient.id)}}'
                          }
                    input { type = 'hidden'
                            ng-if = 'vm.ingredientQuantity(ingredient.id) > 0'
                            name = 'pizza[pizza_ingredients_attributes][{{$index}}][core]'
                            value = '{{vm.pizzaIngredient(ingredient.id).core}}'
                          }
                  span { ng-if = '!vm.pizzaIngredient(ingredient.id).id' }
                    span { ng-if = 'vm.ingredientQuantity(ingredient.id) > 0' }
                      input { type = 'hidden'
                              name = 'pizza[pizza_ingredients_attributes][{{$index}}][ingredient_id]'
                              value = '{{ingredient.id}}'
                            }
                      input { type = 'hidden'
                              name = 'pizza[pizza_ingredients_attributes][{{$index}}][quantity]'
                              value = '{{vm.ingredientQuantity(ingredient.id)}}'
                            }
                      input { type = 'hidden'
                              name = 'pizza[pizza_ingredients_attributes][{{$index}}][core]'
                              value = '{{vm.pizzaIngredient(ingredient.id).core}}'
                            }
  .form-group
    = f.label :pizza_attribute_attributes, class: 'col-sm-2 control-label'
    .col-sm-10
      .table-responsive
        table.table
          thead
            tr
              th Вес, гр.
              th Цена, руб.
              th.col-pizza-size Размер пиццы
          tbody
            - item.pizza_attributes.each do |pizza_attribute|
              tr
                = f.fields_for :pizza_attributes, pizza_attribute do |ff|
                  td.col-input = ff.text_field :weight, class: 'form-control mask-weight'
                  td = ff.text_field :price, class: 'form-control mask-currency'
                  td.col-pizza-size
                    = ff.hidden_field :pizza_size
                    = pizza_attribute.pizza_size_i18n
  .form-group
    .col-sm-10.col-sm-offset-2
      = f.button nil, class: 'btn btn-primary btn-lg ladda-button'
